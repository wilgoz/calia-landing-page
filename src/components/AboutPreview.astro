---
import { locationUrl } from "../utils/constants";
---

<section class="about" id="about">
  <div class="about-content">
    <div class="about-text">
      <h2>About <b>Calia</b></h2>
      <p>
        Located in the heart of Gading Serpong, Calia combines traditional
        Japanese head spa techniques with modern luxury.
        <br /><br />
        Our expert therapists will deliver personalized treatments to relax your
        mind, revitalize your scalp, and promote overall well-being.
      </p>
      <div class="button-group">
        <a
          href="https://www.instagram.com/caliaheadspa/"
          class="social-button instagram"
          target="_blank"
        >
          <i class="fab fa-instagram"></i> Follow Us
        </a>
        <a href={locationUrl} class="social-button location" target="_blank">
          <i class="fas fa-map-marker-alt"></i> Find Us Here
        </a>
      </div>
    </div>
    <div class="instagram-reel-container">
      <iframe
        title="About Calia"
        src="https://www.instagram.com/reel/DD__6zxymob/embed"
        width="400"
        height="700"
        allow="autoplay; encrypted-media"
        loading="lazy"></iframe>
    </div>
  </div>
</section>

<style>
  html {
    scroll-behavior: smooth;
  }
  
  .instagram-reel-container {
    max-width: 100%;
    margin: 10px auto;
    padding: 20px;
    border-radius: 15px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    text-align: center;
  }

  .instagram-reel-container iframe {
    max-width: 100%;
    border-radius: 10px;
    border: none;
  }

  .about {
    padding: 6rem 2rem;
    background-color: var(--color-background);
  }

  .about-content {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .about-text h2 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
    color: var(--color-primary);
  }

  .about-text p {
    margin-bottom: 2rem;
    line-height: 1.8;
  }

  .button-group {
    display: flex;
    gap: 1rem;
  }

  .social-button {
    padding: 0.8rem 1.5rem;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s ease;
    font-size: 0.9rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .social-button i {
    font-size: 1.2rem;
  }

  .instagram {
    background-color: #c13584;
    color: white;
  }

  .instagram:hover {
    background-color: #e1306c;
  }

  .location {
    background-color: var(--color-primary);
    color: white;
  }

  .location:hover {
    background-color: #34495e;
  }

  @media (max-width: 768px) {
    .about-content {
      grid-template-columns: 1fr;
    }
  }
</style>
