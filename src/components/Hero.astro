---
import { whatsappBookingUrl } from "../utils/constants";
---

<section class="hero">
  <div class="hero-content">
    <h1>CALIA</h1>
    <span class="katakana">カリア</span>
    <p class="subtitle">Japanese Head Spa</p>
    <p class="tagline">
      Experience traditional Japanese scalp care and deep relaxation
    </p>
    <a href={whatsappBookingUrl} class="cta-button" target="_blank"
      >Book Your Session</a
    >
  </div>
</section>

<style>
  .hero {
    height: calc(100vh - 54px);
    background-image: linear-gradient(rgba(0, 0, 0, 0.65), rgba(0, 0, 0, 0.65)),
      url("../assets/hero.jpg");
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
  }

  .hero-content {
    padding: 2rem;
  }

  h1 {
    font-family: "Sawarabi Mincho", serif;
    font-size: 4rem;
    margin-bottom: 0.5rem;
    letter-spacing: 0.2em;
  }

  .katakana {
    font-family: "Sawarabi Mincho", serif;
    font-size: 2.5rem;
    color: #d4a373;
    display: block;
    margin-top: 0.5rem;
    letter-spacing: 2px;
  }

  .subtitle {
    font-family: "Sawarabi Mincho", serif;
    font-size: 1.5rem;
    margin-bottom: 2rem;
    letter-spacing: 0.1em;
  }

  .tagline {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-button {
    display: inline-block;
    padding: 1rem 2rem;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    font-family: "Sawarabi Mincho", serif;
    font-size: 1.2rem;
    font-weight: bold;
    text-decoration: none;
    border-radius: 50px;
    border: 1px solid rgba(255, 255, 255, 0.4);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    transition: all 0.3s ease;
    letter-spacing: 0.1em;
  }

  .cta-button:hover {
    background: #a87550;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 3rem;
    }

    .subtitle {
      font-size: 1.2rem;
    }

    .tagline {
      font-size: 1rem;
    }
  }
</style>
