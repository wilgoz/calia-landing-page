---
const services = [
  {
    title: "Traditional Head Spa",
    description:
      "Experience our signature scalp treatment combining massage and natural oils.",
    duration: "60 min",
    price: "$120",
  },
  {
    title: "Luxury Treatment",
    description:
      "Premium scalp care with organic products and extended massage session.",
    duration: "90 min",
    price: "$180",
  },
  {
    title: "Express Care",
    description: "Quick but effective scalp treatment for busy professionals.",
    duration: "30 min",
    price: "$75",
  },
];
---

<section class="services" id="services">
  <h2>Our Services</h2>
  <div class="service-grid">
    {
      services.map((service) => (
        <div class="service-card">
          <h3>{service.title}</h3>
          <p>{service.description}</p>
          <div class="service-details">
            <span>{service.duration}</span>
            <span>{service.price}</span>
          </div>
        </div>
      ))
    }
  </div>
  <div class="services-cta">
    <a href="/services" class="view-all">View All Services</a>
  </div>
</section>

<style>
  .services {
    padding: 6rem 2rem;
    background-color: white;
  }

  h2 {
    text-align: center;
    margin-bottom: 3rem;
    font-size: 2rem;
    color: var(--color-primary);
  }

  .service-grid {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .service-card {
    padding: 2rem;
    border: 1.5px solid #eee;
    border-radius: 8px;
    transition: transform 0.3s ease;
  }

  .service-card:hover {
    transform: translateY(-5px);
  }

  .service-card h3 {
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .service-details {
    margin-top: 1rem;
    display: flex;
    justify-content: space-between;
    color: var(--color-secondary);
  }

  .services-cta {
    text-align: center;
    margin-top: 3rem;
  }

  .view-all {
    display: inline-block;
    padding: 0.8rem 2rem;
    color: var(--color-accent);
    text-decoration: none;
    border: 2px solid var(--color-accent);
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  .view-all:hover {
    background-color: var(--color-accent);
    color: white;
  }
</style>
