---
import { formatCurrency } from "../utils/formatCurrency";

const packages = {
  makarizo: {
    name: "Makarizo Package",
    description:
      "High-quality Japanese scalp treatments at an accessible price point",
    priceRange: 175000,
    features: [
      "One shampoo option for all hair types",
      "No facial mask included",
      "No tea tree scalp scrub included",
    ],
  },

  lador: {
    name: "La'Dor Package",
    description:
      "Luxury scalp care using premium La'Dor products for exceptional results",
    priceRange: 275000,
    features: [
      "A wide range of shampoos tailored to different hair types and needs",
      "Free from SLS (Sodium Lauryl Sulfate), ensuring a gentle cleanse",
      "Includes a luxurious facial mask for added relaxation and rejuvenation",
      "Cooling tea tree scalp scrub included",
    ],
  },
};
---

<section class="packages">
  <div class="content-wrapper">
    <h2>Our Treatment Lines</h2>
    <div class="package-grid">
      <div class="package-card">
        <h3>{packages.makarizo.name}</h3>
        <p class="description">{packages.makarizo.description}</p>
        <p class="price-range">
          Starting from {formatCurrency(packages.makarizo.priceRange)}/hr
        </p>
        <ul>
          {packages.makarizo.features.map((feature) => <li>{feature}</li>)}
        </ul>
      </div>
      <div class="package-card premium">
        <span class="premium-badge">Recommended</span>
        <h3>{packages.lador.name}</h3>
        <p class="description">{packages.lador.description}</p>
        <p class="price-range">
          Starting from {formatCurrency(packages.lador.priceRange)}/hr
        </p>
        <ul>
          {packages.lador.features.map((feature) => <li>{feature}</li>)}
        </ul>
      </div>
    </div>
  </div>
</section>

<style>
  .packages {
    padding: 6rem 0;
    background-color: #f8f1e9;
    position: relative;
  }

  .packages::before {
    content: "";
    position: absolute;
    top: -50px;
    left: 0;
    right: 0;
    height: 50px;
    background: linear-gradient(to bottom right, transparent 49%, #f8f1e9 50%);
  }

  .content-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  h2 {
    text-align: center;
    margin-bottom: 3rem;
    font-size: 2rem;
    color: var(--color-primary);
  }

  .package-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 3rem;
  }

  .package-card {
    padding: 2.5rem;
    background: white;
    border-radius: 8px;
    position: relative;
    transition: transform 0.3s ease;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  }

  .package-card:hover {
    transform: translateY(-5px);
  }

  .package-card.premium {
    border: 2px solid var(--color-accent);
  }

  .premium-badge {
    position: absolute;
    top: -15px;
    right: 20px;
    background: var(--color-accent);
    color: white;
    padding: 4px 12px;
    border-radius: 12px;
    font-size: 0.875rem;
  }

  h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .description {
    color: var(--color-text);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .price-range {
    font-weight: 500;
    color: var(--color-accent);
    margin-bottom: 1.5rem;
  }

  ul {
    list-style: none;
  }

  li {
    margin-bottom: 0.75rem;
    padding-left: 1.5rem;
    position: relative;
  }

  li:before {
    content: "â€¢";
    position: absolute;
    left: 0;
    color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .package-grid {
      gap: 2rem;
    }
  }
</style>
